<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@drawable/fragment_marketing"
    app:cardCornerRadius="15dp"
    app:contentPadding="4dp"
    android:id="@+id/item_directions_cardView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <LinearLayout
           android:id="@+id/item_directions_fullName"
           android:layout_width="wrap_content"
           android:layout_height="90dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="@id/black_line_item_directions"
           android:gravity="center"
           android:orientation="vertical">

           <TextView
               android:id="@+id/item_directions_firstName_textView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="FirstName"
               style="@style/fontTitleSmall"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               android:layout_gravity="center"/>

           <TextView
               android:id="@+id/item_directions_secondName_textView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="SecondName"
               app:layout_constraintTop_toBottomOf="@id/item_directions_firstName_textView"
               app:layout_constraintLeft_toLeftOf="parent"
               style="@style/fontTitleSmall"
               android:layout_marginTop="5dp"
               android:layout_gravity="center"
               />

       </LinearLayout>
        <View
            android:id="@+id/black_line_item_directions"
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:background="@color/gray"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="130dp"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/black_line_item_directions"
            android:text="@string/social_media"
            style="@style/fontTitleSmall"
            android:textSize="20sp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:maxWidth="200dp"
            android:id="@+id/item_directions_title_textView"
            />

        <TextView
            android:id="@+id/item_directions_descriptions_textview"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/item_directions_title_textView"
            app:layout_constraintLeft_toLeftOf="@id/item_directions_title_textView"
            style="@style/fontDescription"
            android:text="Social Media"
            android:layout_marginTop="12dp"
            android:maxLines="1"
            android:ellipsize="end"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>