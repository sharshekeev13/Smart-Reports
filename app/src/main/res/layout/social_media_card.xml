<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/category_card"
    android:layout_margin="10dp"
    android:background="@drawable/fragment_marketing"
    app:cardCornerRadius="15dp"
    app:contentPadding="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/social_media_icon"
                android:layout_width="123dp"
                android:layout_height="123dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/social_media" />

            <ImageView
                android:id="@+id/members_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/social_media_icon"
                android:contentDescription="@string/social_media"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                />
            <TextView
                android:id="@+id/members_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/members_icon"
                android:text="@string/social_media"
                style="@style/fontDescription"
                android:layout_marginTop="24dp"
                android:layout_marginStart="12dp"
                />
            <ImageView
                android:id="@+id/budget_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/members_icon"
                app:layout_constraintLeft_toRightOf="@id/social_media_icon"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:contentDescription="@string/social_media"/>
            <TextView
                android:id="@+id/budget_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/fontDescription"
                android:text="@string/social_media"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/budget_icon"
                android:layout_marginTop="86dp"
                android:layout_marginStart="12dp"/>
            <TextView
                android:id="@+id/area_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/social_media_icon"
                android:text="@string/social_media"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                style="@style/fontTitleSmall"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tap_to_spend_textview"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="@string/tap_to_spend_money"
                style="@style/fontTitleSmall"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:visibility="gone"
                android:background="@drawable/fragment_marketing"
                android:backgroundTint="@color/halo_blue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:ignore="SmallSp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>