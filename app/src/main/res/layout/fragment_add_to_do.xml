<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fragment_marketing2"
    android:elevation="4dp"
    tools:context=".activity.manager.directions.add.AddToDoFragment">

    <TextView
        android:id="@+id/add_direction_textView_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_direction"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/fontTitle"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/select_employee_button_alert"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/add_direction_textView_alert"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/select_employee"
        style="@style/fontTitleSmall"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_marginEnd="20dp"
        app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_down_24" />

    <TextView
        android:id="@+id/title_textView_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/fontTitleSmall"
        android:text="@string/title"
        app:layout_constraintTop_toBottomOf="@id/select_employee_button_alert"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        />

    <EditText
        android:id="@+id/titleEditTextAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_textView_alert"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:inputType="text"
        android:hint="@string/title"
        style="@style/fontDescription"
        android:background="@drawable/login_textinput_background"
        android:layout_marginTop="5dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:autofillHints="null"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/description_textView_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/fontTitleSmall"
        android:text="@string/description"
        app:layout_constraintTop_toBottomOf="@id/titleEditTextAlert"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        />

    <EditText
        android:id="@+id/descriptionEditTextAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/description_textView_alert"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:inputType="textMultiLine"
        android:hint="@string/description"
        style="@style/fontDescription"
        android:background="@drawable/login_textinput_background"
        android:layout_marginTop="5dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:padding="10dp"
        android:autofillHints="null" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        app:layout_constraintTop_toBottomOf="@id/descriptionEditTextAlert"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:padding="20dp"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/close_button_employee_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/alert_dialog_button"
            android:text="@string/close"
            style="@style/fontTitleSmall"
            android:textColor="@color/halo_blueText"
            android:textAllCaps="false"
            android:layout_weight="50"
            android:layout_marginEnd="50dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_button_employee_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/alert_dialog_button"
            android:backgroundTint="@color/halo_blueText"
            android:text="@string/add"
            style="@style/fontTitleSmall"
            android:textColor="@color/whiteBackActionBar"
            android:textAllCaps="false"
            android:layout_weight="50"
            android:layout_marginStart="50dp"
            />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>