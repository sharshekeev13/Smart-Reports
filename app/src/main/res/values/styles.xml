<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="fontTitle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="fontDescription">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
    </style>


    <style name="fontTitleSmall">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="fontTitleSmallWhite">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="fontTitleSmallWhiteForTab">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="fontTitleForToolBar">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/halo_blueText</item>
    </style>

    <style name="textInputForLoginPage">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textColorHint">#757575</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">26dp</item>
        <item name="android:layout_marginEnd">26dp</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">12dp</item>
    </style>
    
    <style name="loginButton" parent="Widget.AppCompat.Button">
        <item name="cornerRadius">5dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/whiteBackActionBar</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:background">@drawable/login_button</item>
        <item name="colorAccent">#6979F8</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/fragment_marketing</item>
    </style>

</resources>